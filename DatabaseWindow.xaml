<Window x:Class="MarketLensESO.DatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Data" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.Resources>
            <!-- Style for all buttons in the window -->
            <Style TargetType="Button">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
												  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
		<TextBlock Grid.Row="0" Text="Import sales data from Lua file. Duplicates are automatically skipped." 
           FontSize="12" 
           Foreground="#7F8C8D"
           HorizontalAlignment="Center"
           TextWrapping="Wrap"
           Margin="0,0,0,20"/>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,20">
            <!-- Database Statistics -->
            <Border Background="#F8F9FA" 
                    BorderBrush="#E1E5E9" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Database Statistics" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Items Count -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Items" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBlock Name="ItemsCountLabel" 
                                       Text="0" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#2196F3"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Sales Count -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Sales" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBlock Name="SalesCountLabel" 
                                       Text="0" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#4CAF50"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Import Section -->
            <Border Background="#F8F9FA" 
                    BorderBrush="#E1E5E9" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Import Data" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>
                    
                    <Button Name="ImportButton" 
                            Content="Select Lua File to Import" 
                            Click="ImportButton_Click"
                            Padding="15,10"
                            Background="#9B59B6"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Normal"
                            FontSize="13"
                            Margin="0,0,0,10"/>
                    
                    <TextBlock Name="ImportStatusText"
                               Text="No file selected"
                               FontSize="11"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Progress Bar -->
        <ProgressBar Name="ImportProgressBar"
                     Grid.Row="2"
                     Height="20"
                     Margin="0,0,0,10"
                     Visibility="Collapsed"/>

        <!-- Close Button -->
        <Button Grid.Row="3"
                Name="CloseButton"
                Content="Close"
                Click="CloseButton_Click"
                Padding="15,8"
                Background="#6C7B7F"
                Foreground="White"
                BorderThickness="0"
                FontWeight="Normal"
                HorizontalAlignment="Right"
                Width="100"/>
    </Grid>
</Window>

