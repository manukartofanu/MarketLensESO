<Window x:Class="MarketLensESO.SetItemNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Item Name" Height="240" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <!-- Item Link Header -->
        <TextBlock Name="ItemLinkTextBlock" 
                   Text="Item Link" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"
                   Margin="0 0 0 12"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Left"/>

        <!-- Name Input -->
        <StackPanel Margin="0 0 0 12">
            <TextBlock Text="Item Name:" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,8"/>
            <TextBox Name="ItemNameTextBox"
                     FontSize="14"
                     Padding="8,6"
                     Text=""
                     TextChanged="ItemNameTextBox_TextChanged"/>
        </StackPanel>

        <!-- Buttons -->
        <DockPanel LastChildFill="False">
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Click="CancelButton_Click"
                    Background="#95A5A6" 
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="Normal"
                    Width="80"
                    Height="32"
                    IsCancel="True"
                    DockPanel.Dock="Right"/>
            <Button Name="SaveButton" 
                    Content="Save" 
                    Click="SaveButton_Click"
                    Background="#27AE60" 
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="Normal"
                    Width="80"
                    IsDefault="True"
                    DockPanel.Dock="Right"/>
        </DockPanel>
    </StackPanel>
</Window>

