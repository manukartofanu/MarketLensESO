<Window x:Class="MarketLensESO.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Market Lens ESO - Item Sales Tracker" Height="800" Width="1400"
		WindowStartupLocation="CenterScreen">
	<Grid Margin="10">
		<Grid.Resources>
			<!-- Style for all buttons in the window -->
			<Style TargetType="Button">
				<Setter Property="Cursor" Value="Hand"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<Border Background="{TemplateBinding Background}" 
									CornerRadius="6"
									Padding="{TemplateBinding Padding}">
								<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
												VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</Grid.Resources>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header with actions -->
		<StackPanel Grid.Row="0" Margin="0,0,0,10">
			<DockPanel Margin="0,0,0,10" LastChildFill="False">
				<Button Name="DatabaseButton" Content="Import Data"
						Click="DatabaseButton_Click"
						Padding="10,5"
						Margin="5,0,0,0"
						Background="#9B59B6"
						Foreground="White"
						BorderThickness="0"
						FontWeight="Normal"
						DockPanel.Dock="Left"/>

				<Button Name="RefreshButton" Content="Refresh"
						Click="RefreshButton_Click"
						Padding="10,5"
						Margin="5,0,0,0"
						Background="#27AE60"
						Foreground="White"
						BorderThickness="0"
						FontWeight="Normal"
						DockPanel.Dock="Right"/>
			</DockPanel>
		</StackPanel>

		<!-- Search Box -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
			<TextBlock Text="Search:" 
					VerticalAlignment="Center" 
					Margin="0,0,10,0"
					FontWeight="SemiBold"
					Foreground="#2C3E50"/>
			<TextBox Name="SearchTextBox"
					Width="400"
					Height="24"
					FontSize="12"
					Padding="5,3"
					TextChanged="SearchTextBox_TextChanged"
					VerticalContentAlignment="Center"/>
		</StackPanel>

		<!-- Tab Control -->
		<TabControl Name="MainTabControl" Grid.Row="2" Margin="0,10,0,0">
			<!-- Items Tab -->
			<TabItem Header="Items" FontWeight="SemiBold" FontSize="14">
